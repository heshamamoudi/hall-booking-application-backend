{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-production-server;Database=HallAppDb;User Id=your-username;Password=your-password;Encrypt=true;TrustServerCertificate=false;"
  },
  "JwtSettings": {
    "SecretKey": "your-production-secret-key-here-at-least-32-characters",
    "Issuer": "HallBookingApp",
    "Audience": "hallbookingapp",
    "ExpiryInHours": 1
  },
  "AllowedHosts": "yourdomain.com,www.yourdomain.com",
  "Cors": {
    "AllowedOrigins": ["https://yourdomain.com", "https://www.yourdomain.com"]
  }
}
